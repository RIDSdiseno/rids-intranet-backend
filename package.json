{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "cross-env DOTENV_CONFIG_PATH=.env tsx watch --ignore node_modules -r dotenv/config --require tsconfig-paths/register src/server.ts",
    "build": "prisma generate --schema prisma/schema.prisma && tsc -p tsconfig.build.json",
    "start": "node --enable-source-maps -r dotenv/config dist/server.js",
    "prisma:generate": "prisma generate --schema prisma/schema.prisma",
    "prisma:validate": "prisma validate --schema prisma/schema.prisma",
    "prisma:deploy": "prisma migrate deploy --schema prisma/schema.prisma"
  },
  "dependencies": {
    "@azure/identity": "^4.13.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@prisma/client": "^6.16.3",
    "argon2": "^0.44.0",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^1.41.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "docx": "^9.5.1",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "googleapis": "^164.1.0",
    "helmet": "^8.1.0",
    "imap-simple": "^5.1.0",
    "isomorphic-fetch": "^3.0.0",
    "jsonwebtoken": "^9.0.2",
    "mailparser": "^3.9.3",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^4.0.0",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "p-limit": "^7.1.1",
    "socket.io": "^4.8.1",
    "xlsx-js-style": "^1.2.0",
    "xlsx-populate": "^1.21.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/argon2": "^0.14.1",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/helmet": "^0.0.48",
    "@types/imap": "^0.8.43",
    "@types/imap-simple": "^4.2.10",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mailparser": "^3.4.6",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.9.1",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.9",
    "cross-env": "^7.0.3",
    "esbuild": "^0.19.12",
    "prisma": "^6.16.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.0",
    "typescript": "^5.9.3"
  }
}
