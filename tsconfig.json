{
  // M치s info: https://aka.ms/tsconfig
  "compilerOptions": {
    /* === Layout === */
    "rootDir": "./src",         // c칩digo fuente
    "outDir": "./dist",         // salida compilada

    /* === Ambiente (Node + ESM) === */
    "module": "NodeNext",       // soporte ESM en Node
    "moduleResolution": "NodeNext",
    "target": "ES2022",         // genera JS moderno compatible
    "lib": ["ES2022"],          // APIs disponibles
    "types": ["node"],          // tipos de Node.js

    /* === Outputs === */
    "sourceMap": true,          // genera .map para debug
    "declaration": true,        // genera archivos .d.ts
    "declarationMap": true,     // genera mapas para d.ts

    /* === Chequeos estrictos === */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* === Estilo / buenas pr치cticas === */
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    /* === Recomendados === */
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* === Import/Export (ESM) === */
    "verbatimModuleSyntax": true, // obliga a usar extensi칩n .js en imports relativos
    "isolatedModules": true       // cada archivo se transpila de forma independiente
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
