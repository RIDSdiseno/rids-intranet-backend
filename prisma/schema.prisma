generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  relationMode      = "prisma"
}

model Cliente {
  id       Int    @id @default(autoincrement())
  nombre   String
  telefono String
  email    String @unique

  // back-relations
  solicitantes Solicitante[] // por Solicitante.clienteId
}

model DetalleEquipo {
  id_detalle_equipo Int     @id @default(autoincrement())
  idEquipo          Int
  macWifi           String?
  so                String?
  tipoDd            String?
  estadoAlm         String?
  office            String?
  teamViewer        String?
  claveTv           String?
  revisado          String?

  // relations
  equipo Equipo @relation(fields: [idEquipo], references: [id_equipo])

  @@index([idEquipo])
}

model Empresa {
  id_empresa      Int                   @id @default(autoincrement())
  nombre          String                @unique
  tieneSucursales Boolean               @default(false)
  solicitantes    Solicitante[]
  visitas         Visita[]              @relation("Empresa_Visita")
  tickets         FreshdeskTicket[]
  companyMaps     FreshdeskCompanyMap[]
  detalleEmpresa  DetalleEmpresa?
  detalleTrabajos DetalleTrabajo[]
}

model DetalleEmpresa {
  id         Int     @id @default(autoincrement())
  rut        String  @unique
  direccion  String
  telefono   String
  email      String
  empresa_id Int     @unique
  empresa    Empresa @relation(fields: [empresa_id], references: [id_empresa], onDelete: Cascade)

  @@map("detalle_empresas")
}

model Solicitante {
  id_solicitante  Int                     @id @default(dbgenerated("nextval((pg_get_serial_sequence('\"Solicitante\"'::text, 'id_solicitante'::text))::regclass)"))
  nombre          String
  email           String?
  telefono        String?
  empresaId       Int
  clienteId       Int?                    @unique
  googleUserId    String?                 @unique
  isActive        Boolean                 @default(true)
  microsoftUserId String?                 @unique
  accountType     AccountType?
  empresa         Empresa                 @relation(fields: [empresaId], references: [id_empresa])
  equipos         Equipo[]
  visitas         Visita[]                @relation("Solicitante_Visita")
  historiales     Historial[]             @relation("Solicitante_Historial")
  tickets         FreshdeskTicket[]
  requesterMaps   FreshdeskRequesterMap[]
  cliente         Cliente?                @relation("ClienteSolicitante", fields: [clienteId], references: [id])
  msLicenses      SolicitanteMsLicense[]

  @@index([empresaId])
  @@index([isActive])
  @@index([accountType])
}

model MsSku {
  skuId         String                 @id
  skuPartNumber String
  displayName   String?
  assignments   SolicitanteMsLicense[]
}

model SolicitanteMsLicense {
  id            Int         @id @default(autoincrement())
  solicitanteId Int
  skuId         String
  assignedAt    DateTime?   @default(now())
  solicitante   Solicitante @relation(fields: [solicitanteId], references: [id_solicitante], onDelete: Cascade)
  sku           MsSku       @relation(fields: [skuId], references: [skuId], onDelete: Cascade)

  @@unique([solicitanteId, skuId])
  @@index([skuId])
  @@index([solicitanteId])
}

model Cliente {
  id          Int          @id @default(autoincrement())
  nombre      String
  telefono    String
  email       String       @unique
  solicitante Solicitante? @relation("ClienteSolicitante")
}

model Equipo {
  id_equipo       Int              @id @default(autoincrement())
  idSolicitante   Int
  serial          String?          @unique
  marca           String
  modelo          String
  procesador      String?
  ram             String?
  disco           String?
  propiedad       String           @default("ASUR")
  solicitante     Solicitante      @relation(fields: [idSolicitante], references: [id_solicitante])
  equipo          DetalleEquipo[]
  detalleTrabajos DetalleTrabajo[]

  @@index([idSolicitante])
}

model EquipoProducto {
  id            Int      @id @default(autoincrement())
  nombre        String
  descripcion   String?
  precio        Decimal
  stock         Int      @default(0)
  marca         String
  modelo        String
  estado        String
  creadoEn      DateTime @default(now())
  actualizadoEn DateTime
}

model FdSourceMap {
  id          Int     @id @default(autoincrement())
  companyId   BigInt? @unique
  domain      String? @unique
  ticketOrgId Int

  // relations
  ticketOrg TicketOrg @relation(fields: [ticketOrgId], references: [id])

  @@index([ticketOrgId])
}

model FreshdeskCompanyMap {
  companyId BigInt  @id
  empresaId Int
  domain    String?

  // relations
  empresa Empresa @relation(fields: [empresaId], references: [id_empresa])

  @@index([idEquipo])
}

enum Area {
  entrada
  domicilio
  reparacion
  salida
}

model DetalleTrabajo {
  id            Int       @id @default(autoincrement())
  fecha_ingreso DateTime
  fecha_egreso  DateTime?
  fecha_prometida DateTime?
  trabajo       String
  accesorios    String?         
  diagnostico   Boolean? @default(false)  
  garantia      Boolean? @default(false)  
  contrasena    String?          
  presupuesto   Float?           
  adelanto      Float?
  prioridad     Prioridad
  estado        String
  notas         String?
  area          Area     @default(entrada)
  empresa_id    Int?
  equipo_id     Int?
  tecnico_id    Int?
  empresa       Empresa?  @relation(fields: [empresa_id], references: [id_empresa])
  equipo        Equipo?   @relation(fields: [equipo_id], references: [id_equipo])
  tecnico       Tecnico?  @relation(fields: [tecnico_id], references: [id_tecnico])

  @@index([createdAt])
  @@index([empresaId])
  @@index([requesterEmail])
  @@index([solicitanteId])
  @@index([ticketOrgId])
  @@index([ticketRequesterId])
}

model Historial {
  tecnicoId          Int
  solicitante        String
  inicio             DateTime
  fin                DateTime
  realizado          String?
  solicitanteId      Int
  actualizaciones    Boolean     @default(false)
  antivirus          Boolean     @default(false)
  ccleaner           Boolean     @default(false)
  estadoDisco        Boolean     @default(false)
  licenciaOffice     Boolean     @default(false)
  licenciaWindows    Boolean     @default(false)
  mantenimientoReloj Boolean     @default(false)
  rendimientoEquipo  Boolean     @default(false)
  id_historial       Int         @id @default(autoincrement())
  direccion_visita   String?
  ecografo           Boolean     @default(false)
  sucursalId         Int?
  tecnico            Tecnico     @relation(fields: [tecnicoId], references: [id_tecnico])
  solicitanteRef     Solicitante @relation("Solicitante_Historial", fields: [solicitanteId], references: [id_solicitante])

  @@index([solicitanteId])
  @@index([sucursalId])
  @@index([tecnicoId, fin(sort: Desc)])
}

model RefreshToken {
  id                Int       @id @default(autoincrement())
  userId            Int
  rtHash            String
  createdAt         DateTime  @default(now())
  expiresAt         DateTime
  revokedAt         DateTime?
  replacedByTokenId Int?
  userAgent         String?
  ip                String?

  @@index([rtHash])
  @@index([userId])
}

model Solicitante {
  id_solicitante  Int          @id @default(dbgenerated("nextval((pg_get_serial_sequence('\"Solicitante\"'::text, 'id_solicitante'::text))::regclass)"))
  nombre          String
  email           String?
  telefono        String?
  empresaId       Int
  clienteId       Int?         @unique
  googleUserId    String?      @unique
  isActive        Boolean      @default(true)
  microsoftUserId String?      @unique
  accountType     AccountType?

  // relations
  empresa     Empresa     @relation(fields: [empresaId], references: [id_empresa])
  cliente     Cliente?    @relation(fields: [clienteId], references: [id])
  equipos     Equipo[]
  historiales Historial[]
  visitas     Visita[]

  msLicenses            SolicitanteMsLicense[]
  freshdeskTickets      FreshdeskTicket[] // back-rel de FreshdeskTicket.solicitante
  FreshdeskRequesterMap FreshdeskRequesterMap[]

  @@index([accountType])
  @@index([empresaId])
  @@index([isActive])
}

model SolicitanteMsLicense {
  id            Int       @id @default(autoincrement())
  solicitanteId Int
  skuId         String
  assignedAt    DateTime? @default(now())

  // relations
  solicitante Solicitante @relation(fields: [solicitanteId], references: [id_solicitante])
  sku         MsSku       @relation(fields: [skuId], references: [skuId]) // ‚Üê nombre 'sku' usado en controladores

  @@unique([solicitanteId, skuId])
  @@index([skuId])
  @@index([solicitanteId])
}

model Sucursal {
  id_sucursal Int     @id @default(autoincrement())
  nombre      String
  direccion   String?
  telefono    String?
  empresaId   Int

  // relations
  empresa     Empresa     @relation(fields: [empresaId], references: [id_empresa])
  visitas     Visita[]
  historiales Historial[]

  @@index([empresaId])
}

model Tecnico {
  id_tecnico   Int     @id @default(autoincrement())
  nombre       String
  email        String  @unique
  passwordHash String
  status       Boolean @default(true)

  // back-relations
  visitas     Visita[]
  historiales Historial[]
  trabajos    detalle_trabajos[] // por detalle_trabajos.tecnico_id
}

model TicketOrg {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime

  // back-relations
  tickets    FreshdeskTicket[]
  requesters TicketRequester[]
  sourceMaps FdSourceMap[]
}

model TicketRequester {
  id            Int      @id @default(autoincrement())
  name          String
  email         String?  @unique
  phone         String?
  fdRequesterId BigInt?  @unique
  ticketOrgId   Int?
  createdAt     DateTime @default(now())
  updatedAt     DateTime

  // relations
  ticketOrg TicketOrg? @relation(fields: [ticketOrgId], references: [id])

  // back-rel
  tickets FreshdeskTicket[] // por FreshdeskTicket.ticketRequesterId

  @@index([ticketOrgId])
}

model Visita {
  id_visita          Int          @id @default(autoincrement())
  empresaId          Int
  tecnicoId          Int
  solicitante        String
  inicio             DateTime
  fin                DateTime?
  confImpresoras     Boolean      @default(false)
  confTelefonos      Boolean      @default(false)
  confPiePagina      Boolean      @default(false)
  otros              Boolean      @default(false)
  otrosDetalle       String?
  status             EstadoVisita @default(PENDIENTE)
  solicitanteId      Int?
  actualizaciones    Boolean      @default(false)
  antivirus          Boolean      @default(false)
  ccleaner           Boolean      @default(false)
  estadoDisco        Boolean      @default(false)
  licenciaOffice     Boolean      @default(false)
  licenciaWindows    Boolean      @default(false)
  mantenimientoReloj Boolean      @default(false)
  rendimientoEquipo  Boolean      @default(false)
  direccion_visita   String?
  ecografo           Boolean      @default(false)
  sucursalId         Int?
  empresa            Empresa      @relation("Empresa_Visita", fields: [empresaId], references: [id_empresa])
  tecnico            Tecnico      @relation(fields: [tecnicoId], references: [id_tecnico])
  solicitanteRef     Solicitante? @relation("Solicitante_Visita", fields: [solicitanteId], references: [id_solicitante])

  @@index([empresaId])
  @@index([tecnicoId])
  @@index([solicitanteId])
}

/// * LEGADO: ya no lo usa el flujo nuevo de tickets
model FreshdeskCompanyMap {
  companyId BigInt  @id
  empresaId Int
  domain    String?
  empresa   Empresa @relation(fields: [empresaId], references: [id_empresa])

  @@index([empresaId])
  @@index([domain])
}

/// * LEGADO: ya no lo usa el flujo nuevo de tickets
model FreshdeskRequesterMap {
  requesterId   BigInt      @id
  solicitanteId Int
  empresaId     Int
  solicitante   Solicitante @relation(fields: [solicitanteId], references: [id_solicitante])

  @@index([empresaId])
  @@index([solicitanteId])
  @@index([tecnicoId])
}

model detalle_empresas {
  id         Int    @id @default(autoincrement())
  rut        String @unique
  direccion  String
  telefono   String
  email      String
  empresa_id Int    @unique

  // relations
  empresa Empresa @relation(fields: [empresa_id], references: [id_empresa])
}

model detalle_trabajos {
  id              Int       @id @default(autoincrement())
  fecha_ingreso   DateTime
  fecha_egreso    DateTime?
  trabajo         String
  accesorios      String?
  prioridad       Prioridad
  estado          String
  notas           String?
  empresa_id      Int?
  equipo_id       Int?
  tecnico_id      Int?
  adelanto        Float?
  contrasena      String?
  diagnostico     Boolean?  @default(false)
  fecha_prometida DateTime?
  garantia        Boolean?  @default(false)
  presupuesto     Float?
  area            Area      @default(entrada)

  // relations
  empresa Empresa? @relation(fields: [empresa_id], references: [id_empresa])
  equipo  Equipo?  @relation(fields: [equipo_id], references: [id_equipo])
  tecnico Tecnico? @relation(fields: [tecnico_id], references: [id_tecnico])
}

model Sucursal {
  id_sucursal Int     @id @default(autoincrement())
  nombre      String
  direccion   String?
  telefono    String?
  empresaId   Int

  @@index([empresaId])
}

enum AccountType {
  google
  microsoft
}

enum Prioridad {
  baja
  normal
  alta
}
