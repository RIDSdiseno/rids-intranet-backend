generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  relationMode      = "prisma"
}

model Cliente {
  id       Int    @id @default(autoincrement())
  nombre   String
  telefono String
  email    String @unique

  // back-relations
  solicitantes Solicitante[] // por Solicitante.clienteId
}

model DetalleEquipo {
  id_detalle_equipo Int     @id @default(autoincrement())
  idEquipo          Int
  macWifi           String?
  so                String?
  tipoDd            String?
  estadoAlm         String?
  office            String?
  teamViewer        String?
  claveTv           String?
  revisado          String?

  // relations
  equipo Equipo @relation(fields: [idEquipo], references: [id_equipo])

  @@index([idEquipo])
}

model Empresa {
  id_empresa      Int     @id @default(autoincrement())
  nombre          String  @unique
  tieneSucursales Boolean @default(false)

  // back-relations que usan tus controladores
  solicitantes    Solicitante[]
  visitas         Visita[]
  tickets         FreshdeskTicket[] // back-rel de FreshdeskTicket.empresa
  detalleEmpresa  detalle_empresas?
  detalleTrabajos detalle_trabajos[]
  sucursales      Sucursal[]

  // mapas Freshdesk / utilidades
  freshdeskCompanyMaps   FreshdeskCompanyMap[]
  freshdeskRequesterMaps FreshdeskRequesterMap[]
}

model Equipo {
  id_equipo     Int     @id @default(autoincrement())
  idSolicitante Int
  serial        String? @unique
  marca         String
  modelo        String
  procesador    String?
  ram           String?
  disco         String?
  propiedad     String  @default("ASUR")

  // relations
  solicitante Solicitante        @relation(fields: [idSolicitante], references: [id_solicitante])
  detalles    DetalleEquipo[]
  trabajos    detalle_trabajos[] // por detalle_trabajos.equipo_id

  @@index([idSolicitante])
}

model EquipoProducto {
  id            Int      @id @default(autoincrement())
  nombre        String
  descripcion   String?
  precio        Decimal
  stock         Int      @default(0)
  marca         String
  modelo        String
  estado        String
  creadoEn      DateTime @default(now())
  actualizadoEn DateTime
}

model FdSourceMap {
  id          Int     @id @default(autoincrement())
  companyId   BigInt? @unique
  domain      String? @unique
  ticketOrgId Int

  // relations
  ticketOrg TicketOrg @relation(fields: [ticketOrgId], references: [id])

  @@index([ticketOrgId])
}

model FreshdeskCompanyMap {
  companyId BigInt  @id
  empresaId Int
  domain    String?

  // relations
  empresa Empresa @relation(fields: [empresaId], references: [id_empresa])

  @@index([domain])
  @@index([empresaId])
}

model FreshdeskRequesterMap {
  requesterId   BigInt @id
  solicitanteId Int
  empresaId     Int

  // relations
  solicitante Solicitante @relation(fields: [solicitanteId], references: [id_solicitante])
  empresa     Empresa     @relation(fields: [empresaId], references: [id_empresa])

  @@index([empresaId])
  @@index([solicitanteId])
}

model FreshdeskTicket {
  id                BigInt    @id
  subject           String
  status            Int
  priority          Int
  type              String?
  requesterEmail    String?
  createdAt         DateTime
  updatedAt         DateTime
  source            String?
  capturedAt        DateTime?
  empresaId         Int?
  solicitanteId     Int?
  ticketOrgId       Int?
  ticketRequesterId Int?

  // relations (nombres usados en controladores)
  empresa         Empresa?         @relation(fields: [empresaId], references: [id_empresa])
  solicitante     Solicitante?     @relation(fields: [solicitanteId], references: [id_solicitante])
  ticketOrg       TicketOrg?       @relation(fields: [ticketOrgId], references: [id])
  ticketRequester TicketRequester? @relation(fields: [ticketRequesterId], references: [id])

  @@index([createdAt])
  @@index([empresaId])
  @@index([requesterEmail])
  @@index([solicitanteId])
  @@index([ticketOrgId])
  @@index([ticketRequesterId])
}

model Historial {
  tecnicoId          Int
  solicitante        String
  inicio             DateTime
  fin                DateTime
  realizado          String?
  solicitanteId      Int
  actualizaciones    Boolean  @default(false)
  antivirus          Boolean  @default(false)
  ccleaner           Boolean  @default(false)
  estadoDisco        Boolean  @default(false)
  licenciaOffice     Boolean  @default(false)
  licenciaWindows    Boolean  @default(false)
  mantenimientoReloj Boolean  @default(false)
  rendimientoEquipo  Boolean  @default(false)
  id_historial       Int      @id @default(autoincrement())
  direccion_visita   String?
  ecografo           Boolean  @default(false)
  sucursalId         Int?

  // relations
  tecnico        Tecnico     @relation(fields: [tecnicoId], references: [id_tecnico])
  solicitanteRef Solicitante @relation(fields: [solicitanteId], references: [id_solicitante])
  sucursal       Sucursal?   @relation(fields: [sucursalId], references: [id_sucursal])

  @@index([solicitanteId])
  @@index([sucursalId])
  @@index([tecnicoId, fin(sort: Desc)])
}

model MsSku {
  skuId         String  @id
  skuPartNumber String
  displayName   String?

  // back-rel
  assignments SolicitanteMsLicense[] // por SolicitanteMsLicense.skuId
}

model RefreshToken {
  id                Int       @id @default(autoincrement())
  userId            Int
  rtHash            String
  createdAt         DateTime  @default(now())
  expiresAt         DateTime
  revokedAt         DateTime?
  replacedByTokenId Int?
  userAgent         String?
  ip                String?

  @@index([rtHash])
  @@index([userId])
}

model Solicitante {
  id_solicitante  Int          @id @default(dbgenerated("nextval((pg_get_serial_sequence('\"Solicitante\"'::text, 'id_solicitante'::text))::regclass)"))
  nombre          String
  email           String?
  telefono        String?
  empresaId       Int
  clienteId       Int?         @unique
  googleUserId    String?      @unique
  isActive        Boolean      @default(true)
  microsoftUserId String?      @unique
  accountType     AccountType?

  // relations
  empresa     Empresa     @relation(fields: [empresaId], references: [id_empresa])
  cliente     Cliente?    @relation(fields: [clienteId], references: [id])
  equipos     Equipo[]
  historiales Historial[]
  visitas     Visita[]

  msLicenses            SolicitanteMsLicense[]
  freshdeskTickets      FreshdeskTicket[] // back-rel de FreshdeskTicket.solicitante
  FreshdeskRequesterMap FreshdeskRequesterMap[]

  @@index([accountType])
  @@index([empresaId])
  @@index([isActive])
}

model SolicitanteMsLicense {
  id            Int       @id @default(autoincrement())
  solicitanteId Int
  skuId         String
  assignedAt    DateTime? @default(now())

  // relations
  solicitante Solicitante @relation(fields: [solicitanteId], references: [id_solicitante])
  sku         MsSku       @relation(fields: [skuId], references: [skuId]) // ‚Üê nombre 'sku' usado en controladores

  @@unique([solicitanteId, skuId])
  @@index([skuId])
  @@index([solicitanteId])
}

model Sucursal {
  id_sucursal Int     @id @default(autoincrement())
  nombre      String
  direccion   String?
  telefono    String?
  empresaId   Int

  // relations
  empresa     Empresa     @relation(fields: [empresaId], references: [id_empresa])
  visitas     Visita[]
  historiales Historial[]

  @@index([empresaId])
}

model Tecnico {
  id_tecnico   Int     @id @default(autoincrement())
  nombre       String
  email        String  @unique
  passwordHash String
  status       Boolean @default(true)

  // back-relations
  visitas     Visita[]
  historiales Historial[]
  trabajos    detalle_trabajos[] // por detalle_trabajos.tecnico_id
}

model TicketOrg {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime

  // back-relations
  tickets    FreshdeskTicket[]
  requesters TicketRequester[]
  sourceMaps FdSourceMap[]
}

model TicketRequester {
  id            Int      @id @default(autoincrement())
  name          String
  email         String?  @unique
  phone         String?
  fdRequesterId BigInt?  @unique
  ticketOrgId   Int?
  createdAt     DateTime @default(now())
  updatedAt     DateTime

  // relations
  ticketOrg TicketOrg? @relation(fields: [ticketOrgId], references: [id])

  // back-rel
  tickets FreshdeskTicket[] // por FreshdeskTicket.ticketRequesterId

  @@index([ticketOrgId])
}

model Visita {
  id_visita          Int          @id @default(autoincrement())
  empresaId          Int
  tecnicoId          Int
  solicitante        String
  inicio             DateTime
  fin                DateTime?
  confImpresoras     Boolean      @default(false)
  confTelefonos      Boolean      @default(false)
  confPiePagina      Boolean      @default(false)
  otros              Boolean      @default(false)
  otrosDetalle       String?
  status             EstadoVisita @default(PENDIENTE)
  solicitanteId      Int?
  actualizaciones    Boolean      @default(false)
  antivirus          Boolean      @default(false)
  ccleaner           Boolean      @default(false)
  estadoDisco        Boolean      @default(false)
  licenciaOffice     Boolean      @default(false)
  licenciaWindows    Boolean      @default(false)
  mantenimientoReloj Boolean      @default(false)
  rendimientoEquipo  Boolean      @default(false)
  direccion_visita   String?
  ecografo           Boolean      @default(false)
  sucursalId         Int?

  // relations (nombres usados en controladores)
  empresa        Empresa      @relation(fields: [empresaId], references: [id_empresa])
  tecnico        Tecnico      @relation(fields: [tecnicoId], references: [id_tecnico])
  solicitanteRef Solicitante? @relation(fields: [solicitanteId], references: [id_solicitante])
  sucursal       Sucursal?    @relation(fields: [sucursalId], references: [id_sucursal])

  @@index([empresaId])
  @@index([solicitanteId])
  @@index([tecnicoId])
}

model detalle_empresas {
  id         Int    @id @default(autoincrement())
  rut        String @unique
  direccion  String
  telefono   String
  email      String
  empresa_id Int    @unique

  // relations
  empresa Empresa @relation(fields: [empresa_id], references: [id_empresa])
}

model detalle_trabajos {
  id              Int       @id @default(autoincrement())
  fecha_ingreso   DateTime
  fecha_egreso    DateTime?
  trabajo         String
  accesorios      String?
  prioridad       Prioridad
  estado          String
  notas           String?
  empresa_id      Int?
  equipo_id       Int?
  tecnico_id      Int?
  adelanto        Float?
  contrasena      String?
  diagnostico     Boolean?  @default(false)
  fecha_prometida DateTime?
  garantia        Boolean?  @default(false)
  presupuesto     Float?
  area            Area      @default(entrada)

  // relations
  empresa Empresa? @relation(fields: [empresa_id], references: [id_empresa])
  equipo  Equipo?  @relation(fields: [equipo_id], references: [id_equipo])
  tecnico Tecnico? @relation(fields: [tecnico_id], references: [id_tecnico])
}

enum AccountType {
  google
  microsoft
}

enum Area {
  entrada
  domicilio
  reparacion
  salida
}

enum EstadoVisita {
  PENDIENTE
  COMPLETADA
  CANCELADA
}

enum Prioridad {
  baja
  normal
  alta
}
